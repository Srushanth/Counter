<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Counter_App.MainPage">

    <StackLayout>
        <Entry x:Name="Count_Limit"
               Placeholder="Count Limit"
               HorizontalTextAlignment="Center"
               Keyboard="Numeric"/>

        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label x:Name="Count"
                   Text="0" 
                   HorizontalTextAlignment="Center" 
                   TextColor="White" 
                   FontSize="36"/>
        </Frame>

        <Button x:Name="Increment"
                Text="Add +1"
                BackgroundColor="#2196F3"
                VerticalOptions="FillAndExpand"
                Clicked="Increment_Clicked"/>

        <Button x:Name="Reset_Count"
                VerticalOptions="End"
                Grid.Row="1"
                BackgroundColor="#2196F3"
                Text="Reset"
                Clicked="Reset_Count_Clicked"/>
    </StackLayout>
</ContentPage>
